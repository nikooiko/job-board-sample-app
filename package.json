{
  "name": "job-board-sample-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:check": "prettier -c \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{apps,libs,test}/**/*.ts\"",
    "start": "nest start ${SERVICE_NAME:-gateway}",
    "start:dev": "nest start ${SERVICE_NAME:-gateway} --watch",
    "start:debug": "nest start ${SERVICE_NAME:-gateway} --debug --watch",
    "start:prod": "node dist/apps/${SERVICE_NAME:-gateway}/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/${SERVICE_NAME:-gateway}/test/jest-e2e.json",
    "prisma": "cd apps/${SERVICE_NAME:-jobs}/src/${SERVICE_NAME:-jobs}-prisma && prisma",
    "prisma:all:generate": "for service in jobs; do SERVICE_NAME=$service npm run prisma generate; done;",
    "dc:up:all": "docker-compose up",
    "dc:up:services": "docker-compose up elasticsearch postgres redis"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.6.0",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/throttler": "^3.1.0",
    "@prisma/client": "^4.9.0",
    "bull": "^4.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "helmet": "^6.0.1",
    "ioredis": "^5.2.5",
    "nestjs-throttler-storage-redis": "^0.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bull": "^4.10.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/triple-beam": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.3.2",
    "prisma": "^4.9.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@app/extra(|/.*)$": "<rootDir>/libs/extra/src/$1",
      "^@app/testing(|/.*)$": "<rootDir>/libs/testing/src/$1"
    }
  },
  "prisma": {
    "seed": "node -r ts-node/register -r tsconfig-paths/register seed.ts"
  }
}
