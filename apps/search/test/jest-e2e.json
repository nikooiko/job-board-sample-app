{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/core(|/.*)$": "<rootDir>../../libs/core/src/$1",
    "^@app/extra(|/.*)$": "<rootDir>../../libs/extra/src/$1",
    "^@app/testing(|/.*)$": "<rootDir>../../libs/testing/src/$1"
  }
}
